{
  "settings": {
    "number_of_shards" :   1,
    "number_of_replicas" : 0
  },
  "mappings": {
    "sensor": {
      "properties" : {
        "node" : { "type" : "integer"},
        "event" : { "type" : "integer" },
        "batch" : { "type" : "integer" },
        "eventTime" : {
          "type" : "date",
          "format": "yyyy-MM-dd'T'HH:mm:ss.SSSZ"
        },
        "temperature" : { "type" : "double" },
        "infectedBy" : { "type" : "integer" }
      }
    }
  }
}